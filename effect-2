  <script>
    document.querySelectorAll('.dropdown-content a').forEach(item => {
      item.addEventListener('click', function (event) {
        event.preventDefault();
        const effect = this.dataset.effect;
        const galleryItems = document.querySelectorAll('.gallery-item img');

        galleryItems.forEach(img => {
          img.style.transform = 'none';
          img.style.filter = 'none';
          img.style.boxShadow = 'none';
          img.style.transition = 'filter 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease';

          if (effect === 'scale') {
            img.addEventListener('mouseover', () => {
              img.style.transform = 'scale(1.1)';
            });
            img.addEventListener('mouseout', () => {
              img.style.transform = 'scale(1)';
            });
          } else if (effect === 'rotate') {
            img.addEventListener('mouseover', () => {
              img.style.transform = 'rotate(5deg)';
            });
            img.addEventListener('mouseout', () => {
              img.style.transform = 'rotate(0deg)';
            });
          } else if (effect === 'grayscale') {
            img.addEventListener('mouseover', () => {
              img.style.filter = 'grayscale(100%)';
            });
            img.addEventListener('mouseout', () => {
              img.style.filter = 'grayscale(0)';
            });
          } else if (effect === 'blur') {
            img.addEventListener('mouseover', () => {
              img.style.filter = 'blur(5px)';
            });
            img.addEventListener('mouseout', () => {
              img.style.filter = 'blur(0px)';
            });
          } else if (effect === 'sepia') {
            img.addEventListener('mouseover', () => {
              img.style.filter = 'sepia(100%)';
            });
            img.addEventListener('mouseout', () => {
              img.style.filter = 'sepia(0)';
            });
          } else if (effect === 'card') {
            img.addEventListener('mouseover', () => {
              img.style.transform = 'rotateX(10deg) rotateY(10deg)';
              img.style.boxShadow = '0 8px 16px rgba(0, 0, 0, 0.2)';
            });
            img.addEventListener('mouseout', () => {
              img.style.transform = 'rotateX(0deg) rotateY(0deg)';
              img.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
            });
          }
        });
      });
    });
  </script>
</body>

